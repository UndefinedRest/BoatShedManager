# Rowing Boards SaaS Server - Environment Variables
#
# Copy this file to .env and fill in the values.
# DO NOT commit .env to version control.

# Database (Supabase PostgreSQL)
# Get this from: Supabase Dashboard → Settings → Database → Connection string
DATABASE_URL=postgresql://postgres:[PASSWORD]@db.[PROJECT].supabase.co:5432/postgres

# Security Keys (generate with: openssl rand -hex 32)
# IMPORTANT: These must be the same across web and worker services
ENCRYPTION_KEY=your-64-character-hex-encryption-key-here
JWT_SECRET=your-64-character-hex-jwt-secret-here

# JWT Configuration
JWT_EXPIRES_IN=3600  # Token expiry in seconds (1 hour)

# Server Configuration
PORT=3000
NODE_ENV=development
BASE_DOMAIN=localhost
MARKETING_URL=http://localhost:3000

# Rate Limiting (requests per minute)
PUBLIC_RATE_LIMIT=100
ADMIN_RATE_LIMIT=30

# Swagger Documentation
# Set to 'true' to enable /api-docs in production (not recommended)
ENABLE_SWAGGER=true

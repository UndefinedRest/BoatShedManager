{
  "name": "@lmrc/db",
  "version": "1.0.0",
  "description": "Shared database package - Drizzle ORM schemas and migrations",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./schema": {
      "types": "./dist/schema.d.ts",
      "import": "./dist/schema.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "db:seed": "tsx src/seed.ts"
  },
  "keywords": ["lmrc", "database", "drizzle", "postgresql"],
  "author": "LMRC",
  "license": "MIT",
  "dependencies": {
    "drizzle-orm": "^0.38.3",
    "postgres": "^3.4.5"
  },
  "devDependencies": {
    "@types/node": "^20.17.9",
    "drizzle-kit": "^0.30.1",
    "dotenv": "^16.4.7",
    "tsx": "^4.20.6",
    "typescript": "^5.7.2"
  }
}
